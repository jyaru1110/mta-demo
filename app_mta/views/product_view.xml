<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="producto_mta_list">
            <field name="name">producto.mta.list</field>
            <field name="model">mta.producto</field>
            <field name="arch" type="xml">
                <tree string="Product list">
                    <field name="buffer_size"/>
                    <field name="oc"/>
                    <field name="bp_solicitud" class="condition" decoration-info="bp_solicitud=='amarillo'" decoration-muted="bp_solicitud=='rojo'"/>
                    <field name="qty_transit" />
                    <field name="bp_transito" class="condition" decoration-info="bp_transito=='amarillo'" decoration-muted="bp_transito=='rojo'"/>
                    <field name="bp_disponible"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>