<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="producto_mta_list">
            <field name="name">producto.mta.list</field>
            <field name="model">mta.producto</field>
            <field name="arch" type="xml">
                <tree string="Product list">
                    <field name="name"/>
                    <field name="default_code"/>
                    <field name="lt"/>
                    <field name="loteOptimo"/>
                    <field name="buffer_size"/>
                    <field name="oc"/>
                    <field name="bp_solicitud" widget="progress_bar_widget"/>
                    <field name="qty_transit"/>
                    <field name="bp_transito" widget="progress_bar_widget" />
                    <field name="qty_available"/>
                    <field name="bp_sitio" widget="progress_bar_widget"/>
                    <field name="alerta" widget="progress_bar_widget"/>
                    <field name="recomendacion"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="producto_mta_form">
            <field name="name">producto.mta.form</field>
            <field name="model">mta.producto</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="id" widget="chart_widget"/>
                        <notebook>
                            <page string="MTA configuraciones">
                                <group>
                                     <group>
                                        <field name="be_mta_mon"/>
                                        <field name="dbm_v"/>
                                        <field name="dbm_r"/>
                                    </group>
                                    <group>
                                        <field name="loteOptimo"/>
                                        <field name="lt"/>
                                        <field name="qty_transit"/>
                                        <field name="buffer_size"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Estado">
                                <group>   
                                    <field class="contenedor_widget" name="alerta" widget="progress_bar_widget"/>
                                    <field name="recomendacion"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="product_mta_search">
            <field name="name">producto.mta.search</field>
            <field name="model">mta.producto</field>
            <field name="arch" type="xml">
                <search>
                      <filter string="Monitoreado mta" name="mta_monitored" domain="[('be_mta_mon', '=', True)]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>