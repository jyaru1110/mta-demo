<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_tree_view_inherit">
            <field name="name">product.template.product.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="buffer_size" decoration-danger="buffer_size=='10'"/>
                    <field name="oc"/>
                    <field name="bp_solicitud"/>
                    <field name="qty_transit"/>
                    <field name="bp_transito"/>
                    <field name="bp_disponible"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="product_template_only_form_view_inherit_academy">
            <field name="name">product.template.product.form.inherit.academy</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="graph">
                        <field name="graph" widget="graph" nolabel="1"/>
                    </page>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="product_graph">
            <field name="name">product.buffer_size.graph</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <graph string="Buffer size">
                    <field name="qty_available" type="row"/>
                    <field name="buffer_size" type="col"/>
                </graph>
            </field>
        </record>
    </data>
</odoo>